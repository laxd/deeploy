<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <description>Holds application context for testing of the domain module.</description>

    <context:component-scan base-package="uk.laxd.deepweb.*"/>

    <!-- Database setup -->
    <import resource="test-db-context.xml"/>

    <bean id="databaseType" class="com.j256.ormlite.db.H2DatabaseType"/>

    <bean id="dataSourceConnectionSource" class="com.j256.ormlite.jdbc.DataSourceConnectionSource">
        <constructor-arg ref="dataSource"/>
        <constructor-arg name="databaseType" ref="databaseType"/>
    </bean>

    <!-- DAO setup -->
    <bean id="buildFlowDao" class="com.j256.ormlite.dao.DaoManager"
          factory-method="createDao">
        <constructor-arg ref="dataSourceConnectionSource"/>
        <constructor-arg name="clazz" value="uk.laxd.deepweb.model.BuildFlow"/>
    </bean>

    <bean id="buildFlowStepDao" class="com.j256.ormlite.dao.DaoManager"
          factory-method="createDao">
        <constructor-arg ref="dataSourceConnectionSource"/>
        <constructor-arg name="clazz" value="uk.laxd.deepweb.model.BuildFlowStep"/>
    </bean>

    <bean id="executorArgumentDao" class="com.j256.ormlite.dao.DaoManager"
          factory-method="createDao">
        <constructor-arg ref="dataSourceConnectionSource"/>
        <constructor-arg name="clazz" value="uk.laxd.deepweb.plugin.ExecutorArgument"/>
    </bean>

    <bean id="executorDao" class="com.j256.ormlite.dao.DaoManager"
          factory-method="createDao">
        <constructor-arg ref="dataSourceConnectionSource"/>
        <constructor-arg name="clazz" value="uk.laxd.deepweb.plugin.Executor"/>
    </bean>

    <bean id="buildFlowStepArgumentDao" class="com.j256.ormlite.dao.DaoManager"
          factory-method="createDao">
        <constructor-arg name="connectionSource" ref="dataSourceConnectionSource"/>
        <constructor-arg name="clazz" value="uk.laxd.deepweb.model.BuildFlowStepArgument"/>
    </bean>

</beans>